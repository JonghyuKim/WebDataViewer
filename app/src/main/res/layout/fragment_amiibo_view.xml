<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView android:id="@+id/iv_detail_main_image"
               android:layout_width="match_parent"
               android:layout_height="400dp"
               android:src="@drawable/wait"
               android:scaleType="fitCenter"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
               app:layout_constraintVertical_bias="0.262"/>

    <TextView android:id="@+id/tv_detail_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="40dp"
              android:text="TextView"
              android:gravity="center"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/iv_detail_main_image" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical"
                  tools:layout_editor_absoluteX="0dp"
                  app:layout_constraintTop_toBottomOf="@+id/iv_detail_main_image"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.364"
                  android:layout_marginTop="8dp">

        <TextView android:id="@+id/tv_amiibo_content1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:padding="10dp"
                  android:text="hello"/>

        <TextView android:id="@+id/tv_amiibo_content2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:padding="10dp"
                  android:text="hello"/>

        <TextView android:id="@+id/tv_amiibo_content3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:padding="10dp"
                  android:text="hello"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>